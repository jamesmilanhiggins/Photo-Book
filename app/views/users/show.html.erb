<h1>User Profile Page</h1>
<%= @user.id %>
<%= @user.username %>
<!-- <%= @user.avatar %> -->
<%= image_tag(@user.avatar.url(:thumb)) %>


<hr>
<%= link_to "Add Image to Flickr", new_user_image_path(@user) %>
<hr>
<h3>Images you have uploaded</h3>

<% @user.images.each do |image| %>

  <%= link_to image_tag(image.avatar.url(:thumb)), image_path(image) %>
  <br>
  <%= image.name %>
  <br>
  <%= image.description %>

  <% if is_admin? || current_user.id == image.user_id %>


    <%= link_to "Edit Image", edit_user_image_path(@user, image) %> |
    <%= link_to "Delete this Image", user_image_path(@user, image),
            :data => {:confirm => "Are you sure?",
              :method => "delete"} %>

    <% end %>


  <hr>
<% end %>
